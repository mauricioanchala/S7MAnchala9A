<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7MAnchala9A.Editar">
    <ContentPage.Content>
        <StackLayout Spacing="10" Padding="10">
            <Label x:Name="mensaje"/>
            <Label x:Name="Actualizar"></Label>
            <Label Text="Nombre: "></Label>
            <Entry x:Name="Nombre" Placeholder="Nombre"></Entry>
            <Label Text="Usuario: "></Label>
            <Entry x:Name="Usuario" Placeholder="Usuario"></Entry>
            <Label Text="Contraseña: "></Label>
            <Entry x:Name="Contrasenia" Placeholder="Contrasenia"></Entry>
            <Button x:Name="btnActualizar" Text="Actualizar" BackgroundColor="LawnGreen" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="Eliminar" BackgroundColor="Red" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>