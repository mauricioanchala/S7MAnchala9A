<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7MAnchala9A.Login">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="30">
            <Label Text="Bienvendos al sistema"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Ingrese el usuario" Keyboard="Email" x:Name="usuario"></Entry>
            <Entry Placeholder="Ingrese la contraseña" IsPassword="True" x:Name="contrasenia"></Entry>
            <Button x:Name="BtnLogin" Text="Iniciar sesión" BackgroundColor="DarkCyan" TextColor="White" Clicked="BtnLogin_Clicked"/>
            <Button x:Name="BtnRegistrar" Text="Registrar" Clicked="BtnRegistrar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>